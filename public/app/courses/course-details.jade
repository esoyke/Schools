.container
  h1 {{course.title}}
    .row
      .col-md-6
        h3(ng-show="course.featured") Featured
        h3 Published on {{course.published | date}}
        h3 Price: {{course.price | currency}}

      .col-md-6
        .panel.panel-primary
          .panel-heading Tags
            .panel-body
              div(ng-repeat="tag in course.tags") {{tag}}