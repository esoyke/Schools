            ul.dropdown-menu(role='menu', aria-labelledby='dLabel')
               datetimepicker(data-ng-model='data.date', data-datetimepicker-config="{ dropdownSelector: '#dropdown2' }")

   .col-md-offset-3
      input.btn(type="submit", value="Search")


